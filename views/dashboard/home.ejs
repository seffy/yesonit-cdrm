<script>
  const buttons = document.querySelectorAll('.button-group li');
  const sections = document.querySelectorAll('.content-section');

  // Restore previously selected filter from localStorage
  const savedTarget = localStorage.getItem('selectedTarget') || 'all';
  updateSelection(savedTarget);

  buttons.forEach(button => {
    button.addEventListener('click', () => {
      const target = button.getAttribute('data-target');
      localStorage.setItem('selectedTarget', target);
      updateSelection(target);
    });
  });

  function updateSelection(target) {
    // Update active button
    buttons.forEach(btn => {
      btn.classList.toggle('active', btn.getAttribute('data-target') === target);
    });

    // Show/hide sections
    sections.forEach(section => {
      if (target === 'all') {
        section.classList.add('show');
      } else {
        section.classList.toggle('show', section.classList.contains(target));
      }
    });
  }
</script>



